<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login | SneakPeeks</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white min-h-screen flex items-center justify-center px-4">
<%- include("partials/alerts") %>
  <div class="w-full max-w-md border border-white/10 rounded-2xl p-6 md:p-8">

    <!-- Logo -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold tracking-widest">
        SNEAK<span class="text-red-500">PEEKS</span>
      </h1>
      <p class="text-gray-400 text-sm mt-2">
        Admin Access Only
      </p>
    </div>

    <!-- Admin Login Form -->
    <form method="post" action="/owners/admin/login" class="space-y-5">

      <input
        type="email"
        name="email"
        required
        placeholder="Admin Email"
        class="w-full bg-transparent border border-white/20
               px-4 py-3 rounded-lg
               focus:outline-none focus:border-red-500
               placeholder-gray-500"
      />

      <input
        type="password"
        name="password"
        required
        placeholder="Password"
        class="w-full bg-transparent border border-white/20
               px-4 py-3 rounded-lg
               focus:outline-none focus:border-red-500
               placeholder-gray-500"
      />

      <button
        type="submit"
        class="w-full bg-red-500 text-black font-bold
               py-3 rounded-lg
               hover:bg-red-400 active:scale-95 transition"
      >
        Login as Admin
      </button>

    </form>

    <!-- Back to User Login -->
    <p class="text-xs text-gray-400 text-center mt-6">
      Not an admin?
      <a href="/" class="underline hover:text-white transition">
        Go back
      </a>
    </p>

  </div>

</body>
</html>