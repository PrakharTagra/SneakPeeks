<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SneakPeeks | Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white">

  <!-- Navbar -->
  <%- include("partials/header") %>
  <%- include("partials/alerts") %>


  <!-- Page Wrapper (offset for fixed navbar) -->
  <main class="pt-24 px-5 md:px-12 max-w-7xl mx-auto">

    <!-- Page Heading -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold tracking-wide">
        Shop Sneakers
      </h1>
      <p class="text-gray-400 mt-2 text-sm md:text-base">
        Discover authentic drops & everyday classics
      </p>
    </div>

    <!-- Filters + Sort -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-10">

      <!-- Filters -->
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 text-sm rounded-full border border-white/20
                       hover:bg-white hover:text-black transition">
          All
        </button>
        <button class="px-4 py-2 text-sm rounded-full border border-white/20
                       hover:bg-white hover:text-black transition">
          Discounted
        </button>
        <button class="px-4 py-2 text-sm rounded-full border border-white/20
                       hover:bg-white hover:text-black transition">
          New Collection
        </button>
        <button class="px-4 py-2 text-sm rounded-full border border-white/20
                       hover:bg-white hover:text-black transition">
          In Stock
        </button>
      </div>

      <!-- Sorting -->
      <select class="bg-black border border-white/20 px-4 py-2 rounded-lg
                     text-sm focus:outline-none">
        <option>Sort by</option>
        <option>Price: Low to High</option>
        <option>Price: High to Low</option>
        <option>Newest First</option>
      </select>
    </div>

    <!-- Products Grid -->
    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- PRODUCT CARD -->
       <%if(products.length===0){%>
        <div>No Products</div>
        <%}else{%>
          <%products.forEach(function(product){%>
              <div class="border border-white/10 rounded-xl p-4
                  hover:border-white/30 transition bg-[<%=product.panelcolor%>]">

        <div class="bg-[<%=product.bgcolor%>] h-56 rounded-lg mb-4
                    flex items-center justify-center">
          <img src="data:image/jpeg;base64,<%=product.image.toString('base64')%>" alt="<%=product.name%>" class="w-full h-full object-cover">
        </div>

        <h3 class="font-semibold text-lg truncate text-[<%=product.textcolor%>]">
          <%=product.name%>
        </h3>

        <div class="flex items-center justify-between text-[<%=product.textcolor%>]">
          <div>
            <span class="font-bold text-3xl">
              ₹ <%=product.discount%>
            </span>
            <span class="line-through opacity-60 mr-1">
              M.R.P ₹ <%=product.price%>
            </span>
            <span class="opacity-80">
              (<%=Math.round(((product.price-product.discount)/product.price)*100)%>% off)
            </span>
          </div>

          <a href="/product/<backend>"
             class="text-4xl border border-white/20 w-12 h-12 flex justify-center align-middle
                    hover:bg-white hover:text-black transition rounded-full">+</a>
        </div>
      </div>
            <%})%>
          <%}%>
    </section>
  </main>
  <%- include("partials/footer") %>
</body>
</html>
